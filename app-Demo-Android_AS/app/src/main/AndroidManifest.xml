<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.fhnw.comgr"
    android:versionCode="13"
    android:versionName="1.3.000">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <uses-feature android:name="android.hardware.camera"                 android:required="true"/>
    <uses-feature android:name="android.hardware.camera.autofocus"       android:required="true"/>
    <uses-feature android:name="android.hardware.camera.front"           android:required="true"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="true"/>
    <uses-feature android:glEsVersion="0x00030000"                       android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GLES3Activity"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                  android:launchMode="singleTask"
                  android:keepScreenOn = "true"
                  android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="ch.fhnw.comgr.GLES3Camera2Service"
            android:label="Camera service"/>
    </application>

</manifest>